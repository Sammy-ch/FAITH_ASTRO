---
import { markdownify } from "@lib/utils/textConverter";
import { Image } from "@astrojs/image/components";
const { banner } = Astro.props;
const { title, button, image, content } = banner;
import { motion } from "framer-motion";
---

<section class="section banner relative">
  <div class="container">
    <div class="row items-center justify-center ">
      <div class="text-center w-[750px]">
        <h1 class="banner-title" set:html={markdownify(title)} />

        <p class="mt-6 pb-6" set:html={markdownify(content)} />
      </div>
       <div class="lg:col-6">
        <Image
        class=" h-[250px] w-[450px] bottom-[25rem] left-[75rem]"
        alt="banner"
        src={image}
        width={550}
        height={350}
      />

      </div> 
    </div>
  </div>

</section>
